import java.util.Scanner;
class Main {
  public static void main(String[] args) {
   Scanner scan=new Scanner(System.in);
   
  int c;
  int sum=0;
   do{
   System.out.println("Enter the two numbers");
   int a=scan.nextInt();
   int b=scan.nextInt();
     sum=a+b;
     System.out.println(sum);
     System.out.println("To continue 1\n To stop 0");
     c=scan.nextInt();
   }
   
   while(c==1);
  }
}
